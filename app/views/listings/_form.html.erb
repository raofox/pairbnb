
<div class="container">
  <div id="title-form">
    Title: <%= form.text_field :title %><br />
  </div>
  <div id="about-form">
    About the Place : <%= form.text_area :summary %><br />
  </div>
  <div id="accomodates-form">
    Accomodates : <%= form.number_field :guest %><br />
  </div>
  <div id="address-form">
    Address: <%= form.text_area :address %><br />
  </div>
  <div id="bedroom-form">
    Bedroom : <%= form.number_field :bedroom %><br />
  </div>
  <div id="bathroom-form">
    Bathroom: <%= form.number_field :bathroom %><br />
  </div>
  <div id="price-form">
    Price: <%= form.number_field :price %><br />
  </div>
  <div id="property-form">
    Property Type: <%= select_tag 'listing[property_type]', options_for_select([["house", :house], ["apartment", :apartment], ["bungalow", :bungalow]]) %>
  </div>
  <div id="room-form">
    Room Type: <%= select_tag 'listing[room_type]', options_for_select([["shared_room", :shared_room], ["private_room", :private_room], ["entire_place", :entire_place]]) %>
  </div>
  <div id="checkbox">
    <%= form.collection_check_boxes :tag_ids, Tag.all, :id, :amenity %>
  </div>
  <div id="photo-upload">
    <%= form.label :photos %>
    <%= form.file_field :photos, multiple: true %><br />
  </div>
  <div class="submit-field">
    <%= form.submit class: 'btn btn-success'%>
  </div>
</div>
